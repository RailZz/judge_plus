#include <vector>
#include <iostream>

using namespace std;

vector<int>ends_on_a(1,1);
vector<int>ends_on_b(1,1);
vector<int>ends_on_c(1,1);
int n;
main(){
cin>>n;

for(int i = 1; i <= n ; i++){
    int a,b,c;
    a = ends_on_a[i-1];
    b = ends_on_b[i-1];
    c = ends_on_c[i-1];
    ends_on_a[i] = b + c;
    ends_on_b[i] = a + b + c;
    ends_on_c[i] = a + b + c;
    }
cout<<ends_on_c[n] ;
return(0);
}
