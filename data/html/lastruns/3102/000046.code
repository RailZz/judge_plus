c = list(map(int,(input().split())))
a = list(map(int,(input().split())))
def f(k):
    cnf = 1
    last = a[0]
    for i in range(1, c[0]):
        if a[i] - last >= k:
            cnf += 1
            last = a[i]
    return cnf
l = 0
r = 10 ** 20
while r - l > 1:
    m = (l + r) // 2
    if f(m) >= c[1]:
        l = m
    else:
        r = m
print(l)