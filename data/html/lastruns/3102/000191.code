def f(sm, a, K):
    k = 0
    for i in a:
        K -= i // sm
        if K <= 0:
            k = 1
            break
    return k        
N, K = list(map(int,input().split()))
a = []
for i in range(N):
    a.append(int(input()))
l = max( a ) + 1
r = 0
while l - r > 1:
    m = ( r + l ) // 2
    if f(m, a, K):
        r = m
    else:
        l = m
print(r)


    
