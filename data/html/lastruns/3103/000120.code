ar = list(map(int, input().split()))
n = ar[0]
s = ar[1]
mas = [[int(i) for i in input().split()] for i in range(n)]
visited = [0] * n
mass = [] * n
for j in range(n):
    for w in range(1, n):
        if mas[j][w] == 1:
            masss = [j, w]
            mass.append(masss)
if len(mass) < n:
    mass.append([0, 0])


def dfs(v):
    visited[v] = 1
    for u in mass[v]:
        if visited[u] == 0:
            dfs(u)


dfs(s)
print(visited.count(1))
